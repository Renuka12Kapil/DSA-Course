import java.until.Scanner;
public class Example{
 public static void main(String[]args){
  int sum=0;
  Scanner sc=new Scanner(System.in);
  System.out.println("Enter size of an array:");
  int n=sc.nextInt();
  int a[]=new int[n];
  for(int i=0; i<=a.length-1; i++){
   a[i]=sc.nextInt();
  }
  for(int i=0; i<=a.length-1; i++){
   if(a[i]%2==0){
    sum=aum+a[i];
   }
  }
 }
}
  
